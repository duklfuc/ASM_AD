@model Tranning.Models.CategoryModel

@{
    ViewData["Title"] = "Categories page";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    bool statusAdd = Convert.ToBoolean(TempData["saveStatus"] ?? false);
    bool statusUpdate = Convert.ToBoolean(TempData["UpdateStatus"] ?? false);
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <h4 class="display-6">List Categories</h4>
        <a class="btn btn-primary btn-sm" href="@Url.Action("Add","Category")"> Add Category </a>

        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p class="mb-0">
                    <input style="padding:0 4px 3px 16px; height:35px; border-radius:40px 0 0 40px; border: solid 1px black; width:500px" type="text" name="SearchString" value="@ViewData["CuerrentFilter"]" />
                    <button type="submit" class="btn btn-primary btn-sm mb-0" style="border-radius:0 40px 40px 0; border: 1px solid black; height:35px">Search</button>
                    <a asp-action="Index">Back to full list</a>
                </p>
            </div>
        </form>
        <hr />
        <hr />

        @if (statusUpdate)
        {
            <div class="text-success my-2"> Update Successfully</div>
        }
        else if (statusAdd)
        {
            <div class="text-success my-2"> Add Successfully</div>
        }

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NAME</th>
                    <th>ICON</th>
                    <th>DESCRIPTION</th>
                    <th>STATUS</th>
                    <th>CREATED AT</th>
                    <th>UPDATED AT</th>
                    <th colspan="2" width="5%">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CategoryDetailLists)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>
                            <img class="img-fluid" src="/uploads/images/@item.icon" />
                        </td>
                        <td>@item.description</td>

                        <td>@item.status</td>
                        <td>@item.created_at</td>
                        <td>@item.updated_at</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update","Category", new { id = @item.id })">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Category", new { id = @item.id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
